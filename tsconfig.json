{
    "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true,
      "outDir": "./dist/cli",
      "rootDir": "./cli",
      "baseUrl": ".",
      "paths": {
        "@/*": ["./cli/*"]
      }
    },
    "include": ["cli/**/*"],
    "exclude": ["node_modules", "dist", "docs", "src"]
  }