{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ESNext",
      "lib": ["DOM", "DOM.Iterable", "ESNext"],
      "jsx": "react",
      "moduleResolution": "node",
      "strict": true,
      "skipLibCheck": true,
      "baseUrl": ".",
      "paths": {
        "@/*": ["./src/*"]
      }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist", "docs", "cli"]
  }
  